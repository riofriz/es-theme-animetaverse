<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
    <view name="detailed">
        <image name="background" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path ifSubset="gamelistcolor:magenta">./../../assets/art/gamelist.png</path>
