<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
    <view name="detailed, basic">
        <text name="logo">
            <color>ffffff</color>
        </text>
        
        <text name="logoText">
            <pos>0.22 0.42</pos>
            <size>1 0.04</size>
            <alignment>center</alignment>
            <color>ffffff</color>
            <fontSize>0.25</fontSize>
            <fontPath>./../../assets/fonts/Road_Rage.otf</fontPath>
            <zIndex>14</zIndex>
            <rotation>-40</rotation>
        </text>

        <image name="background" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path ifSubset="gamelistcolor:magenta">./../../assets/art/gamelist.png</path>
			<path ifSubset="gamelistcolor:yellow">./../../assets/art/gamelist-yellow.png</path>
            <zIndex>20</zIndex>
            <color>CCCCCC</color>
        </image>

        <video name="md_video">
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <effect>none</effect>
            <delay>0.12</delay>
            <pos>0.5 0.5</pos>
            <size>1 1</size>
            <zIndex>10</zIndex>
            <audio>false</audio>
        </video>

        <image name="tvNoisesList" extra="true">
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path>./../../assets/art/tv-noises.gif</path>
            <effect>none</effect>
            <delay>0.12</delay>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>5</zIndex>
        </image>

        <image name="extraOverlay" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./../../assets/art/gamelist-video-overlay.png</path>
            <zIndex>0</zIndex>
            <zIndex>15</zIndex>
        </image>

        <textlist name="gamelist">
            <selectorColor ifSubset="gamelistcolor:magenta">FC2A8B</selectorColor>
            <selectorColorEnd ifSubset="gamelistcolor:magenta">FC2A8B</selectorColorEnd>
			<selectorColor ifSubset="gamelistcolor:yellow">fad400</selectorColor>
            <selectorColorEnd ifSubset="gamelistcolor:yellow">fad400</selectorColorEnd>
            <selectedColor ifSubset="gamelistcolor:magenta">ffffff</selectedColor>
			<selectedColor ifSubset="gamelistcolor:yellow">000000</selectedColor>
            <primaryColor>ffffff</primaryColor>
            <secondaryColor>ffffff</secondaryColor>
            <fontPath>./../../assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <fontSize>0.026</fontSize>
            <pos>0 0.250</pos>
            <size>0.3 0.55</size>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <origin>0 0</origin>
            <lineSpacing>2.1</lineSpacing>
            <selectorImagePath>./../../assets/art/box.png</selectorImagePath>
            <selectorOffsetY>-0.05</selectorOffsetY>
            <selectorHeight>0.040</selectorHeight>
            <zIndex>30</zIndex>
            <sound>./../../assets/sounds/scroll.wav</sound>
        </textlist>

        <text name="md_name">
            <pos>0.475 0.22</pos>
            <size>0.5 0.04</size>
            <alignment>left</alignment>
			<color ifSubset="gamelistcolor:yellow">fad400</color>
            <color ifSubset="gamelistcolor:magenta">FC2A8B</color>
            <fontSize>0.060</fontSize>
            <fontPath>./../../assets/fonts/Road_Rage.otf</fontPath>
            <zIndex>190</zIndex>
            <glowColor>000000</glowColor>
            <glowSize>2</glowSize>
            <glowOffset>-4 4 0 0</glowOffset>
            <zIndex>17</zIndex>
        </text>

        <text name="md_description">
            <pos>0.525 0.35</pos>
            <size>0.35 0.59</size>
            <color>ffffff</color>
            <glowColor>000000</glowColor>
            <glowSize>2</glowSize>
            <glowOffset>-4 4 0 0</glowOffset>
            <fontSize>0.028</fontSize>
            <fontPath>./../../assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_genre">
            <pos>0.907 0.14</pos>
            <size>0.125 0.47</size>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./../../assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
            <rotation>-90</rotation>
        </text>

        <text name="md_lbl_players">
            <pos>0.907 0.63</pos>
            <size>0.125 0.10</size>
            <rotation>-90</rotation>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./../../assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_players">
            <pos>0.907 0.56</pos>
            <size>0.125 0.10</size>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./../../assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
            <rotation>-90</rotation>
        </text>

        <text name="md_lbl_playcount">
            <pos>0.907 0.50</pos>
            <size>0.125 0.10</size>
            <rotation>-90</rotation>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./../../assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_playcount">
            <pos>0.907 0.39</pos>
            <size>0.125 0.10</size>
            <rotation>-90</rotation>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./../../assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
            <glowColor>000000</glowColor>
            <glowSize>2</glowSize>
            <glowOffset>-4 4 0 0</glowOffset>
        </text>

        <rating name="md_rating">
            <pos>0.407 0.50</pos>
            <alignment>left</alignment>
            <color>ffffff</color>
            <scale>0.60</scale>
            <filledPath ifSubset="gamelistcolor:yellow">./../../assets/icons/rating_filled.svg</filledPath>
            <filledPath ifSubset="gamelistcolor:magenta">./../../assets/icons/rating_filled_magenta.svg</filledPath>
            <unfilledPath>./../../assets/icons/rating_unfilled.svg</unfilledPath>
            <zIndex>190</zIndex>
            <rotation>90</rotation>
        </rating>
    </view>
</theme>