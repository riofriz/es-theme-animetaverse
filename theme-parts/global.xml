<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
    <view name="menu">
		<menuText name="menutitle">
			<fontPath>./../assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<color>ffffff</color>
		</menuText>

		<menuText name="menufooter">
			<fontPath>./../assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.02</fontSize>
		</menuText>

		<menuText name="menutext">
			<fontPath>./../assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.026</fontSize>
			<color>ffffff</color>
			<selectorColor>fcd400</selectorColor>
			<selectorColorEnd>fcd400</selectorColorEnd>
			<selectedColor>000000</selectedColor>
			<separatorColor>000000</separatorColor>
		</menuText>

		<menuTextSmall name="menutextsmall">
			<fontPath>./../assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.02</fontSize>
		</menuTextSmall>

		<menuBackground name="menubg">
			<zIndex>50</zIndex>
			<color>2F1359</color>
			<cornerSize>48 48</cornerSize>
			<path>./../assets/art/frame.png</path>
		</menuBackground>

		<menuIcons name="menuicons">
			<iconKodi>./../assets/icons/Kodi.png</iconKodi>
			<iconSystem>./../assets/icons/System.png</iconSystem>
			<iconUpdates>./../assets/icons/Updates.png</iconUpdates>
			<iconGames>./../assets/icons/Games.png</iconGames>
			<iconControllers>./../assets/icons/Controllers.png</iconControllers>
			<iconUI>./../assets/icons/UI.png</iconUI>
			<iconSound>./../assets/icons/Sound.png</iconSound>
			<iconNetwork>./../assets/icons/Network.png</iconNetwork>
			<iconScraper>./../assets/icons/Scraper.png</iconScraper>
			<iconAdvanced>./../assets/icons/Advanced.png</iconAdvanced>
			<iconQuit>./../assets/icons/Quit.png</iconQuit>
			<iconRestart>./../assets/icons/Restart.png</iconRestart>
			<iconShutdown>./../assets/icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>./../assets/icons/Fastshutdown.png</iconFastShutdown>
			<iconRetroachievements>./../assets/icons/Contest.png</iconRetroachievements>
			<iconManual>./../assets/icons/Manual.png</iconManual>
		</menuIcons>
	</view>	

    <view name="system,screen,detailed,basic">
		<helpsystem name="help">
			<fontPath>./../assets/fonts/Agencyfb-bOLD.ttf</fontPath>
			<fontSize>0.022</fontSize>
			<pos>0.01 0.97</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<iconA>./../assets/icons/arcade/a.svg</iconA>
			<iconB>./../assets/icons/arcade/b.svg</iconB>
			<iconX>./../assets/icons/arcade/x.svg</iconX>
			<iconY>./../assets/icons/arcade/y.svg</iconY>
		</helpsystem>
	</view>

    <view name="screen">
		<text name="clock" extra="static">
			<origin>0.3 0.7</origin>
			<pos>0.365 0.148</pos>
			<fontSize>0.03</fontSize>
			<color>ffffff</color>
		</text>

		<batteryIndicator name="batteryIndicator">
			<origin>0.3 0.7</origin>
			<pos>0.325 0.125</pos>
			<fontSize>0.03</fontSize>
			<color>ffffff</color>
		</batteryIndicator>

		<text name="network">
			<origin>0.3 0.7</origin>
			<pos>0.3 0.148</pos>
			<fontSize>0.03</fontSize>
			<color>ffffff</color>
		</text>

		<controllerActivity name="controllerActivity">
			<origin>0.3 0.7</origin>
			<pos>0.06 0.126</pos>
			<size>0.03</size>
			<imagePath>./../assets/icons/arcade/controller.svg</imagePath>     
			<hotkeyColor ifSubset="indexcolor:yellow">fad400</hotkeyColor>
			<hotkeyColor ifSubset="indexcolor:magenta">fc2a8b</hotkeyColor>
			<color>ffffff</color>
		</controllerActivity>
	</view>
</theme>