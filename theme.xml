<theme>
	<formatVersion>7</formatVersion>
	<include>./subsets.xml</include>

	<view name="menu">
		<menuText name="menutitle">
			<fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<color>ffffff</color>
		</menuText>

		<menuText name="menufooter">
			<fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.02</fontSize>
		</menuText>

		<menuText name="menutext">
			<fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.026</fontSize>
			<color>ffffff</color>
			<selectorColor>fcd400</selectorColor>
			<selectorColorEnd>fcd400</selectorColorEnd>
			<selectedColor>000000</selectedColor>
			<separatorColor>000000</separatorColor>
		</menuText>

		<menuTextSmall name="menutextsmall">
			<fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.02</fontSize>
		</menuTextSmall>

		<menuBackground name="menubg">
			<color>2F1359</color>
			<cornerSize>48 48</cornerSize>
			<path>./assets/art/frame.png</path>
		</menuBackground>

		<menuIcons name="menuicons">
			<iconKodi>./assets/icons/Kodi.png</iconKodi>
			<iconSystem>./assets/icons/System.png</iconSystem>
			<iconUpdates>./assets/icons/Updates.png</iconUpdates>
			<iconGames>./assets/icons/Games.png</iconGames>
			<iconControllers>./assets/icons/Controllers.png</iconControllers>
			<iconUI>./assets/icons/UI.png</iconUI>
			<iconSound>./assets/icons/Sound.png</iconSound>
			<iconNetwork>./assets/icons/Network.png</iconNetwork>
			<iconScraper>./assets/icons/Scraper.png</iconScraper>
			<iconAdvanced>./assets/icons/Advanced.png</iconAdvanced>
			<iconQuit>./assets/icons/Quit.png</iconQuit>
			<iconRestart>./assets/icons/Restart.png</iconRestart>
			<iconShutdown>./assets/icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>./assets/icons/Fastshutdown.png</iconFastShutdown>
			<iconRetroachievements>./assets/icons/Contest.png</iconRetroachievements>
			<iconManual>./assets/icons/Manual.png</iconManual>
		</menuIcons>
	</view>	

	<view name="system,screen,detailed">
		<helpsystem name="help">
			<fontPath>./assets/fonts/Agencyfb-bOLD.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<pos>0.22 0.961</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<iconA>./assets/icons/arcade/a.svg</iconA>
			<iconB>./assets/icons/arcade/b.svg</iconB>
			<iconX>./assets/icons/arcade/x.svg</iconX>
			<iconY>./assets/icons/arcade/y.svg</iconY>
		</helpsystem>
	</view>

	<view name="screen">
		<text name="clock">
			<origin>0.3 0.7</origin>
			<pos>0.365 0.148</pos>
			<fontSize>0.03</fontSize>
			<color>ffffff</color>
		</text>

		<text name="network">
			<origin>0.3 0.7</origin>
			<pos>0.3 0.148</pos>
			<fontSize>0.03</fontSize>
			<color>ffffff</color>
		</text>

		<controllerActivity name="controllerActivity">
			<origin>0.3 0.7</origin>
			<pos>0.06 0.126</pos>
			<size>0.03</size>
			<imagePath>./assets/icons/arcade/controller.svg</imagePath>     
			<hotkeyColor ifSubset="indexcolor:yellow">fad400</hotkeyColor>
			<hotkeyColor ifSubset="indexcolor:magenta">fc2a8b</hotkeyColor>
			<color>ffffff</color>
		</controllerActivity>
	</view>

	<view name="system">
		<sound name="bgsound">
			<path ifSubset="backgroundmusic:both">./assets/music/animetas_tracks.mp3</path>
			<path ifSubset="backgroundmusic:silenceofthenight">./assets/music/silence_of_the_night.mp3</path>
			<path ifSubset="backgroundmusic:readytofight">./assets/music/ready_to_fight.mp3</path>
		</sound>

        <video name="staticBackground">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path>./assets/art/bgvideo.mp4</path>
            <zIndex>0</zIndex>
        </video>

        <image name="bgOverlay" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path>./assets/art/bg-overlay.png</path>
            <zIndex>10</zIndex>
        </image>

        <image name="tvNoises" extra="true">
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path>./assets/art/tv-noises.gif</path>
            <zIndex>159</zIndex>
            <effect>none</effect>
            <delay>0.3</delay>
            <origin>0.3 0.7</origin>
            <pos>0.151 0.725</pos>
            <size>0.364 0.395</size>
            <zIndex>20</zIndex>
        </image>

        <video name="videobox" extra="true">
            <path>{random}</path>
            <effect>none</effect>
            <delay>0.3</delay>
            <origin>0.3 0.7</origin>
            <pos>0.151 0.725</pos>
            <size>0.364 0.395</size>
            <zIndex>30</zIndex>
            <audio ifSubset="muteindexvideo:yes">false</audio>
        </video>

        <image name="coreOverlay" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path ifSubset="indexcolor:yellow">./assets/art/video-frame.png</path>
            <path ifSubset="indexcolor:magenta">./assets/art/video-frame-magenta.png</path>
            <zIndex>40</zIndex>
        </image>

        <image ifSubset="showmonkey:yes" name="animonkey" extra="true">
            <maxSize>0.25</maxSize>
            <pos>0.015 0.61</pos>
            <origin>0 0</origin>
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path>./assets/art/animonkey.gif</path>
            <zIndex>50</zIndex>
        </image>

        <image name="logo">
            <zIndex>70</zIndex>
            <path>./assets/logos/${system.theme}.svg</path>
            <path>./assets/logos/${system.theme}.png</path>
            <storyboard event="activate">
                <animation ifSubset="indexcolor:yellow" property="color" from="ffffff" to="FAD400" begin="" duration="600" mode="EaseIn" autoreverse="false"/>
				<animation  ifSubset="indexcolor:magenta" property="color" from="ffffff" to="FC2A8B" begin="" duration="600" mode="EaseIn" autoreverse="false"/>
            </storyboard>
        </image>

        <text name="logoText">
            <fontPath>./assets/fonts/Road_Rage.otf</fontPath>
            <fontSize>0.056</fontSize>
            <color>ffffffff</color>
        </text>

        <text name="systemInfo">
            <origin>0 0</origin>
            <pos>0.418 0.36</pos>
            <size>0.15</size>
            <zIndex>10</zIndex>
            <backgroundColor>00000000</backgroundColor>
            <color ifSubset="indexcolor:yellow">fad400</color>
			<color ifSubset="indexcolor:magenta">fc2a8b</color>
            <fontPath>./assets/fonts/Road_Rage.otf</fontPath>
            <fontSize>0.025</fontSize>
        </text>

        <carousel name="systemcarousel">
            <type>vertical</type>
            <pos>0.637 0.12</pos>
            <size>1 0.7</size>
            <origin>0 0</origin>
            <color>00000000</color>
            <logoScale>0.9</logoScale>
            <logoSize>0.25 0.155</logoSize>
            <logoPos>0 0.28</logoPos>
            <maxLogoCount>4.5</maxLogoCount>
            <zIndex>60</zIndex>
        </carousel>
    </view>

	<view name="detailed">
        <image name="background" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path ifSubset="gamelistcolor:magenta">./assets/art/gamelist.png</path>
			<path ifSubset="gamelistcolor:yellow">./assets/art/gamelist-yellow.png</path>
            <zIndex>20</zIndex>
            <color>CCCCCC</color>
        </image>

        <video name="md_video">
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <effect>none</effect>
            <delay>0.12</delay>
            <pos>0.5 0.5</pos>
            <size>1 1</size>
            <zIndex>10</zIndex>
            <audio>false</audio>
        </video>

        <image name="tvNoisesList" extra="true">
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path>./assets/art/tv-noises.gif</path>
            <effect>none</effect>
            <delay>0.12</delay>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>0</zIndex>
        </image>

        <image name="extraOverlay" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./assets/art/gamelist-video-overlay.png</path>
            <zIndex>0</zIndex>
            <zIndex>15</zIndex>
        </image>

        <textlist name="gamelist">
            <selectorColor ifSubset="gamelistcolor:magenta">FC2A8B</selectorColor>
            <selectorColorEnd ifSubset="gamelistcolor:magenta">FC2A8B</selectorColorEnd>
			<selectorColor ifSubset="gamelistcolor:yellow">fad400</selectorColor>
            <selectorColorEnd ifSubset="gamelistcolor:yellow">fad400</selectorColorEnd>
            <selectedColor ifSubset="gamelistcolor:magenta">ffffff</selectedColor>
			<selectedColor ifSubset="gamelistcolor:yellow">000000</selectedColor>
            <primaryColor>ffffff</primaryColor>
            <secondaryColor>ffffff</secondaryColor>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <fontSize>0.026</fontSize>
            <pos>0 0.250</pos>
            <size>0.3 0.55</size>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <origin>0 0</origin>
            <lineSpacing>2.1</lineSpacing>
            <selectorImagePath>./assets/art/box.png</selectorImagePath>
            <selectorOffsetY>-0.05</selectorOffsetY>
            <selectorHeight>0.040</selectorHeight>
            <zIndex>30</zIndex>
            <sound>./assets/sounds/scroll.wav</sound>
        </textlist>

        <image name="console" extra="true">
            <pos>0.7 0.05</pos>
            <origin>0 0</origin>
            <maxSize>0.29</maxSize>
            <path>./assets/consoles/${system.theme}.png</path>
            <zIndex>30</zIndex>
        </image>

        <image name="md_marquee">
            <origin>0 0</origin>
            <pos>0.39 0.53</pos>
            <maxSize>0.2</maxSize>
            <rotation>-90</rotation>
            <zIndex>160</zIndex>
        </image>

        <text name="md_developer">
            <pos>0.525 0.8327</pos>
            <size>0.094 0.02</size>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_description">
            <pos>0.525 0.35</pos>
            <size>0.35 0.44</size>
            <color>ffffff</color>
            <fontSize>0.028</fontSize>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_genre">
            <pos>0.525 0.7964</pos>
            <size>0.108 0.02</size>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_lbl_players">
            <pos>0.607 0.83</pos>
            <size>0.125 0.10</size>
            <alignment>right</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_players">
            <pos>0.73 0.83</pos>
            <size>0.125 0.10</size>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_lbl_playcount">
            <pos>0.64 0.792</pos>
            <size>0.125 0.10</size>
            <alignment>right</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <text name="md_playcount">
            <pos>0.764 0.792</pos>
            <size>0.125 0.10</size>
            <alignment>left</alignment>
            <color>ffffff</color>
            <fontSize>0.022</fontSize>
            <fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
            <zIndex>190</zIndex>
        </text>

        <rating name="md_rating">
            <pos>0.69 0.783</pos>
            <alignment>left</alignment>
            <color>ffffff</color>
            <scale>0.45</scale>
            <filledPath>./assets/icons/rating_filled.svg</filledPath>
            <unfilledPath>./assets/icons/rating_unfilled.svg</unfilledPath>
            <zIndex>190</zIndex>
        </rating>
    </view>
</theme>
