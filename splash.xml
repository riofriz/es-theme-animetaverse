<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  	<include>./theme.xml</include>
	<view name="splash">
		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>
		
		<image name="background">
			<path>./assets/art/splash.jpg</path>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<tile>false</tile>
			<linearSmooth>true</linearSmooth>
		</image>
		
		<text name="label, Version, Platforms, Loading, Warning, author" extra="true">
			<origin>0.5 0.5</origin>
			<fontPath>./assets/fonts/AgencyFB-Bold.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>d2bfa8FF</color>
			<forceUppercase>true</forceUppercase>
			<size>1 0.1</size>
			<alignment>center</alignment>
			<glowColor>00000080</glowColor>
			<glowSize>2</glowSize>
			<glowOffset>1</glowOffset>
		</text>

		<text name="label">
			<size>0.33 0.05</size>
			<pos>0.5 0.75</pos>
			<color>ffffff</color>
		</text>
			
		<image name="progressbar">
			<origin>0 0.5</origin>
			<pos>0.24 0.8</pos>
			<size>0.25 0.03</size>
			<color>381965</color>
			<colorEnd>381965</colorEnd>
		</image>
		
		<image name="progressbar:active">
			<color>fcd400</color>
			<colorEnd>fcd400</colorEnd>
		</image>
	</view>
</theme>
